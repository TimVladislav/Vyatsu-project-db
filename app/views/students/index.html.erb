<h1>Студенты</h1>
<br>
<table id="studentTable" class="table table-striped table-bordered tablesorter responsive">
  <thead>
  <tr>
    <th>ФИО</th>
    <th>Группа</th>
    <th>Дата сдачи</th>
    <th>Предмет</th>
    <th>Преподаватель</th>
    <th>e-mail</th>
    <th>Телефон</th>
    <th>Соц. сеть</th>
    <th><%= link_to 'Add', new_student_path %></th>
  </tr>
  </thead>
  <tbody>
  <% @students.each do |student|%>
    <tr>
      <td><%= student.fio %></td>
      <td><%= student.group %></td>
      <td><%= student.date_work %></td>
      <td><%= student.subject %></td>
      <td><%= student.teacher %></td>
      <td><%= student.email %></td>
      <td><%= student.tnumber %></td>
      <td><%= student.sn %></td>
      <td>
        <%= link_to 'Show', student_path(student) %>
        <%= link_to 'Edit', edit_student_path(student) %>
        <%= link_to 'Delete', student_path(student), method: :delete, data: {confirm: 'Вы уверены, что хотите удалить строку?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>

</table>
<script type="text/javascript" charset="utf-8">
  $(document).ready(function(){
    //$("#articleTable").tablesorter({sortList: [[0,0],[1,0]]});
    $("#studentTable").dataTable();
  });
</script>
